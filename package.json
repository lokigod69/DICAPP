{
  "name": "runedeck",
  "version": "1.0.0",
  "private": true,
  "description": "RuneDeck - Advanced vocabulary trainer with spaced repetition",
  "scripts": {
    "dev:desktop": "pnpm -C apps/desktop dev",
    "dev:web": "pnpm -C apps/web dev",
